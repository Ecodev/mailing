<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<general>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:mailing/Resources/Private/Language/locallang.xlf:flexform.tab.general</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.selection>
						<TCEforms>
							<label>LLL:EXT:mailing/Resources/Private/Language/locallang.xlf:settings.selection</label>
							<config>
								<type>select</type>
								<itemsProcFunc>Fab\Mailing\Backend\TceForms->getSelections</itemsProcFunc>
								<size>1</size>
								<maxitems>1</maxitems>
							</config>
						</TCEforms>
					</settings.selection>
					<settings.recipientPreview>
						<TCEforms>
							<label>LLL:EXT:mailing/Resources/Private/Language/locallang.xlf:settings.recipientPreview</label>
							<config>
								<type>user</type>
								<userFunc>Fab\Mailing\Backend\TceForms->previewSelection</userFunc>
							</config>
						</TCEforms>
					</settings.recipientPreview>
				</el>
			</ROOT>
		</general>

		<sender>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:mailing/Resources/Private/Language/locallang.xlf:flexform.tab.sender</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.nameFrom>
						<TCEforms>
							<label>LLL:EXT:mailing/Resources/Private/Language/locallang.xlf:settings.nameFrom</label>
							<config>
								<type>user</type>
								<userFunc>Fab\Mailing\Backend\TceForms->renderNameFrom</userFunc>
							</config>
						</TCEforms>
					</settings.nameFrom>
					<settings.emailFrom>
						<TCEforms>
							<label>LLL:EXT:mailing/Resources/Private/Language/locallang.xlf:settings.emailFrom</label>
							<config>
								<type>user</type>
								<userFunc>Fab\Mailing\Backend\TceForms->renderEmailFrom</userFunc>
							</config>
						</TCEforms>
					</settings.emailFrom>
				</el>
			</ROOT>
		</sender>

		<display>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:mailing/Resources/Private/Language/locallang.xlf:flexform.tab.display</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.displayRecipients>
						<TCEforms>
							<label>LLL:EXT:mailing/Resources/Private/Language/locallang.xlf:settings.displayRecipients</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.displayRecipients>
					<settings.parseToMarkdown>
						<TCEforms>
							<label>LLL:EXT:mailing/Resources/Private/Language/locallang.xlf:settings.parseToMarkdown</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.parseToMarkdown>
					<settings.layout>
						<TCEforms>
							<label>LLL:EXT:mailing/Resources/Private/Language/locallang.xlf:settings.layout</label>
							<config>
								<type>select</type>
								<foreign_table>tx_messenger_domain_model_messagelayout</foreign_table>
								<size>1</size>
								<minItems>0</minItems>
								<maxItems>100</maxItems>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.layout>
				</el>
			</ROOT>
		</display>

	</sheets>

</T3DataStructure>